<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/vw_card_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp">

        <RelativeLayout
            android:id="@+id/vw_rl_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/vw_rl_3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/vw_rl_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/vw_view_img"
                        android:layout_width="130dp"
                        android:layout_height="100dp">

                        <ImageView
                            android:id="@+id/vw_image_product"
                            android:layout_width="130dp"
                            android:layout_height="100dp"
                            android:scaleType="fitCenter"
                            android:background="#d6d6d6" />

                        <ImageView
                            android:id="@+id/vw_play_imageB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_play_white" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/vw_textdetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toRightOf="@id/vw_view_img"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vw_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/vw_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subtitle"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/vw_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/vw_ll_orderButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/vw_orderButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_shop" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="10dp"
                            android:layout_below="@id/vw_orderButton"
                            android:text="Order"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textAllCaps="true"/>


                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/vw_rl_3">

                <LinearLayout
                    android:id="@+id/vw_ll_bahanNbumbu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/ll_text_bahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Bahan Pokok"
                            android:textAllCaps="true"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vw_text_bahan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bahan Pokok" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_text_detailsIngredient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Bahan Pokok"
                            android:textAllCaps="true"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/vw_text_bumbu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bahan Pokok" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vw_ll_bahanNbumbu">

                    <ImageView
                        android:id="@+id/vw_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_expand_arrow" />

                    <ImageView
                        android:id="@+id/vw_dropup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_drop_up"
                        android:visibility="invisible" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>